{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "emulators": {
    "auth": {
      "port": 9210,
      "options": {
        "projectId": "demo-project",
        "allowDuplicateEmails": true,
        "anonymousEnabled": true
      }
    },
    "firestore": {
      "port": 9211
    },
    "functions": {
      "port": 9212
    },
    "storage": {
      "port": 9213
    },
    "ui": {
      "enabled": true,
      "port": 9215
    },
    "singleProjectMode": true,
    "hub": {
      "port": 9214
    }
  }
}
